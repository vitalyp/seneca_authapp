extends layout

block content
  h1= title
  p Welcome to #{title}

  span#errorMsg(style='color:red')
  span#msg(style='color:green')
  #content_register.content(style='display:none')
    h1 Register
    form#register_form(action='/auth/register', method='post')
      p
        label(for='name') Name:
        br
        input#name(name='name')
      p
        label(for='email') Email:
        br
        input#email(name='email')
      p
        label(for='password') Password:
        br
        input#password(type='password', name='password')
      p
        label(for='repeat') Repeat Password:
        br
        input#repeat(type='password', name='repeat')
      p
        input(type='submit', value='Register User')
    button#show_login  Go to login
  #content_login.content
    h1 Login
    form#login(action='/auth/login', method='post')
      p
        label(for='login_username') Username:
        br
        input#login_username(name='login_username')
      p
        label(for='login_password') Password:
        br
        input#login_password(type='login_password', name='password')
      p
        input(type='submit', value='Login')
    button#show_register Go to register
  #content_account.content(style='display:none')
    h1 Account
    form#update_form(action='/auth/update_user', method='post')
      p
        label(for='name') Name:
        br
        input#user_name(name='user_name')
      p
        label(for='email') Email/Username:
        br
        input#user_email(name='user_email')
      p
        input(type='submit', value='Update User')
    button#logout Logout
